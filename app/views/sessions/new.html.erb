<div class="row justify-content-center">
  <div class="col-xl-6 col-md-8 col-sm-10 col-12">
    <div class="custom-form p-3">

      <h1 class="text-center mb-3"><%= t(".title") %></h1>

      <%= form_with url: session_path do |f| %>
        <div class="mb-3">
          <%= f.email_field :email_address, placeholder: t(".email_address"), value: params[:email_address], class: "form-control" %>
        </div>

        <div class="position-relative mb-3" data-controller="password-visibility">
          <%= f.password_field :password, placeholder: t(".password"), class: "form-control pe-5", data: { password_visibility_target: "input" } %>
          <button type="button" class="btn btn-link position-absolute end-0 top-50 translate-middle-y text-muted" data-action="password-visibility#toggle" tabindex="-1">
            <i data-password-visibility-target="icon" class="eye-icon fa-solid fa-eye"></i>
          </button>
        </div>

        <%= f.submit t(".log_in"), class: "btn btn-primary w-100 mb-3" %>
      <% end %>

      <div class="form-footer d-flex justify-content-center align-items-center">
        <p class="mb-0 me-2"><%= t(".no_account") %></p>
        <strong><%= link_to t(".sign_up"), sign_up_path %></strong>
      </div>

    </div>
  </div>
</div>
