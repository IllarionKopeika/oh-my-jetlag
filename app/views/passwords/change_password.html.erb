<div class="row justify-content-center">
  <div class="col-xl-6 col-md-8 col-sm-10 col-12">
    <div class="custom-form p-3">

      <h1 class="text-center mb-3"><%= t(".title") %></h1>

      <%= render "shared/errors", object: Current.user %>

      <%= form_with model: Current.user, url: update_password_path do |f| %>
        <div class="position-relative mb-3" data-controller="password-visibility">
          <%= f.password_field :password_challenge, placeholder: t(".current_password"), class: "form-control pe-5", data: { password_visibility_target: "input" } %>
          <button type="button" class="btn btn-link position-absolute end-0 top-50 translate-middle-y text-muted" data-action="password-visibility#toggle" tabindex="-1">
            <i data-password-visibility-target="icon" class="eye-icon fa-solid fa-eye"></i>
          </button>
        </div>

        <div class="position-relative mb-3" data-controller="password-visibility">
          <%= f.password_field :password, placeholder: t(".new_password"), class: "form-control pe-5", data: { password_visibility_target: "input" } %>
          <button type="button" class="btn btn-link position-absolute end-0 top-50 translate-middle-y text-muted" data-action="password-visibility#toggle" tabindex="-1">
            <i data-password-visibility-target="icon" class="eye-icon fa-solid fa-eye"></i>
          </button>
        </div>

        <div class="position-relative mb-3" data-controller="password-visibility">
          <%= f.password_field :password_confirmation, placeholder: t(".password_confirmation"), class: "form-control pe-5", data: { password_visibility_target: "input" } %>
          <button type="button" class="btn btn-link position-absolute end-0 top-50 translate-middle-y text-muted" data-action="password-visibility#toggle" tabindex="-1">
            <i data-password-visibility-target="icon" class="eye-icon fa-solid fa-eye"></i>
          </button>
        </div>

        <%= f.submit t(".change_password"), class: "btn btn-primary w-100 mb-3" %>
      <% end %>

    </div>
  </div>
</div>
