<div class="row justify-content-center">
  <div class="col-xl-6 col-md-8 col-sm-10 col-12">
    <div class="custom-form p-3">

      <h1 class="text-center mb-3"><%= t(".title") %></h1>

      <%= form_with url: fetch_flight_path, method: :get, html: { novalidate: true, class: "needs-validation", id: "flight-search-form" }, data: { turbo_frame: "flight_result", controller: "validation" } do |f| %>
        <div class="position-relative mb-3">
          <%= f.text_field :flight_number, placeholder: t(".flight_number"), class: "form-control", required: true %>
          <div class="invalid-tooltip">
            <%= t(".enter_flight_number") %>
          </div>
        </div>

        <div class="position-relative mb-3">
          <%= f.date_field :departure_date, placeholder: t(".departure_date"), class: "form-control", data: { controller: 'datepicker', locale: I18n.locale }, required: true %>
          <div class="invalid-tooltip centered-tooltip">
            <%= t(".choose_departure_date") %>
          </div>
        </div>

        <%= f.submit t(".search"), class: "btn btn-primary w-100 mb-3" %>
      <% end %>

      <%= turbo_frame_tag "flight_result" do %>
        <!-- search result fetch.html.erb -->
      <% end %>

    </div>
  </div>
</div>
